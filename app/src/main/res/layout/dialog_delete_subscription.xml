<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="400dp"
    android:background="@drawable/delete_subscription_dialog"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/nanumsquareb"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="관리 구독 서비스 해지하기"
        android:textColor="@color/mainColor"
        android:textSize="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_subscription_home"
        android:orientation="vertical"

        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_delete_dialog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/naver_logo" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_delete_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanumsquarer"

                    android:gravity="bottom|left"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingBottom="2dp"
                    android:text="Naver Plus"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/payment_system_delete_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanumsquarer"

                    android:gravity="top|left"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingTop="2dp"
                    android:text="Naver Plus"
                    android:textColor="@color/grayColor"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description_delete_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2dp"

            android:text="쇼핑할 때마다 네이버페이 포인트 5%! 다양한 혜택과 서비스"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:fontFamily="@font/nanumsquarer"
            />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/url_text_delete_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareb"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"

            android:clickable="true"
            android:text="'여기'"
            android:textColor="@color/red"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquarer"
            android:paddingTop="15dp"
            android:text=" 를 누르면, 해지 URL로 연결합니다."
            android:textColor="@color/black"
            android:textSize="17dp" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquarer"
        android:paddingLeft="15dp"
        android:layout_marginTop="2dp"
        android:text="(해지 URL 정보가 없을 경우 연결되지 않을 수 있습니다.)"
        android:textColor="@color/grayColor"
        android:textSize="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquarer"
        android:paddingLeft="15dp"
        android:lineSpacingExtra="3dp"
        android:text="\n해지가 완료됐다면 삭제하기 버튼을 눌러서\n관리 목록에서 제거하세요."
        android:textColor="@color/black"
        android:textSize="17dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/cancel_button_delete_dialog"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquarer"
            android:text="취소하기"
            android:textSize="20dp" />

        <Button
            android:id="@+id/delete_button_delete_dialog"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nanumsquarer"
            android:text="삭제하기"
            android:textColor="#ff0000"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>