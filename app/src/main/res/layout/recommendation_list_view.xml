<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/recommendation_background"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="45dp"
                            android:text="햄버거"
                            android:textSize="25dp"
                            android:textColor="@color/colorBurgerKing"
                            android:fontFamily="@font/nanumsquarer"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="45dp"
                            android:text="관련"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="15dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/consumption_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="13,000"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/won"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="원"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="을 소비하셨네요!"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:text="버거킹 구독 서비스"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="15dp"
                            android:textColor="@color/colorBurgerKing"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="는 어떠신가요?"
                            android:fontFamily="@font/nanumsquarer"
                            android:textSize="15dp" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="16dp"
                    android:text="이번 달 기준"
                    android:fontFamily="@font/nanumsquarer"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="right">

                        <TextView
                            android:id="@+id/discount_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="13,000"
                            android:textSize="23dp"
                            android:fontFamily="@font/nanumsquareb"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="원"
                            android:textSize="23dp"
                            android:fontFamily="@font/nanumsquareb"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 할인"
                            android:textSize="23dp"
                            android:fontFamily="@font/nanumsquareb"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/black"/>

                </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_circle_background">

                <ImageView
                    android:id="@+id/icon_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_burgerking" />

        </FrameLayout>

</FrameLayout>