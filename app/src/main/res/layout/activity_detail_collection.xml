<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="477dp"
            android:layout_height="507dp"
            android:layout_marginBottom="1dp"
            android:background="#F4E0D2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.633">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="492dp">

                <ImageView
                    android:id="@+id/collectionImage"
                    android:layout_width="359dp"
                    android:layout_height="282dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_rounding"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.226"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    tools:srcCompat="@drawable/fruit" />

                <TextView
                    android:id="@+id/collectionName"
                    android:layout_width="323dp"
                    android:layout_height="69dp"
                    android:layout_marginStart="43dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="273dp"
                    android:layout_marginBottom="124dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="left"
                    android:text="리얼 후르츠"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.043"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/collectionImage"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/collectionDescription"
                    android:layout_width="451dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="43dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:text="맛있고 신선한 제철과일을 매달 즐기세요!"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.411"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/collectionImage"
                    app:layout_constraintVertical_bias="0.329" />

                <TextView
                    android:id="@+id/collectionPrice"
                    android:layout_width="204dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="273dp"
                    android:layout_marginBottom="170dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:text="24,000원"
                    android:textSize="35dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.28"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/collectionDescription"
                    app:layout_constraintVertical_bias="0.133" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="454dp"
            android:layout_height="169dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="149dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="379dp"
                    android:layout_height="51dp"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="left"
                    android:text="구독 서비스 모아보기"
                    android:textColor="#2196F3"
                    android:textSize="22dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.255" />

                <TextView
                    android:id="@+id/collectionTitle"
                    android:layout_width="220dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/nanumsquarer"
                    android:gravity="center"
                    android:text="REAL Fruit"
                    android:textSize="25dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4"
                    app:layout_constraintVertical_bias="1.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <Button
            android:id="@+id/collectionButton"
            android:layout_width="327dp"
            android:layout_height="63dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/pricebutton"
            android:fontFamily="@font/nanumsquareb"
            android:text="구독하러 가기"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            tools:textSize="20sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>