<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/calendar_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"

        android:fontFamily="@font/nanumsquarer"
        android:gravity="center"
        android:text="결제 며칠 전에 알림을 받을지 선택해주세요."
        android:textColor="@color/black"
        android:textSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="#0C000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one_day_button_alarm_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/alarm_setting_button"
            android:fontFamily="@font/nanumsquareb"
            android:text="1일 전"
            android:textColor="@color/white"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/three_day_button_alarm_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/alarm_setting_button"
            android:fontFamily="@font/nanumsquareb"
            android:text="3일 전"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one_week_button_alarm_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/alarm_setting_button"
            android:fontFamily="@font/nanumsquareb"
            android:text="일주일 전"
            android:textColor="@color/white"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/no_alarm_button_alarm_setting_dialog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/alarm_setting_button"
            android:fontFamily="@font/nanumsquareb"
            android:text="설정 안함"
            android:textColor="#ff4646"
            android:textSize="20dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>